{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c 'uvicorn backend.main:app --host 0.0.0.0 --port ${PORT:-8000}'",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120
  }
}
